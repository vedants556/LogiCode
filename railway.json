{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build:prod",
    "buildTimeout": 1800
  },
  "deploy": {
    "startCommand": "cd backend && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
